<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="italic"
        android:textColor="@color/yellow"
        android:layout_marginTop="24dp"
        android:textSize="60sp"
        android:text="Firebase\nStorage❤️‍🩹"
        android:gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_navToComp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_navToXml"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="@color/green"
        android:backgroundTint="@color/white"
        android:text="Navigate to Compose"
        app:strokeColor="@color/green"
        app:strokeWidth="2dp"
        app:rippleColor="@color/green"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_navToXml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        app:layout_constraintTop_toBottomOf="@id/btn_navToComp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/yellow"
        android:backgroundTint="@color/white"
        android:text="Navigate to XML"
        app:strokeColor="@color/yellow"
        app:strokeWidth="2dp"
        app:rippleColor="@color/yellow"/>

</androidx.constraintlayout.widget.ConstraintLayout>